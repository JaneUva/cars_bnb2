<%= simple_form_for(@car) do |f| %>
  <%= f.input :kind, collection: @kinds %>
  <%= f.input :brand %>
  <%= f.input :capacity %>
  <%= f.input :price %>
  <%= f.input :drive_train, collection: @drive_train_types %>
  <%= f.input :location %>
  <%= f.input :description %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Host your car", class: "btn btn-primary" %>
<% end %>
