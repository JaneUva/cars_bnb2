<div class="container">
  <h1 id="car-show-title"><%= @car.brand %></h1>
  <div class="car-info row">
    <div class="car-details col-md-8">
      <%= cl_image_tag @car.photo.key, height: 300, width: 400, crop: :fill %>
        <div id="car-specs">
        <h4><%= @car.kind.capitalize %></h4>
        <p>ðŸ‘¤<%= @car.capacity %> passengers</p>
        <p>ðŸ•¹<%= @car.drive_train.capitalize %></p>
      </div>
    </div>
    <div class="car-status col-md-4">
      <p>â‚¬<%= @car.price %> per day</p>
      <% if @car.online %>
        <i class="fas fa-car green"> - available</i>
      <% else %>
        <i class="fas fa-car red"> - unavailable</i>
      <% end %>
      <a class="booking-book-button " data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
        Book this car
      </a>
      <div class="collapse" id="collapseExample">
        <div class="card card-body">
          <%= render "bookings/form" %>
        </div>
      </div>
    </div>
  </div>
  <hr>
  <div class="car-description row">
    <p class="description-text col-md-7"><%= @car.description %> </p>
  </div>
      <br>
      <br>
      <h3><%= pluralize @car.reviews.size, "review" %></h3>
      <div id="reviews">
        <% if @car.reviews.blank? %>
          Be the first to leave a review for <strong><%= @car.brand %></strong>
        <% else %>
          <% @car.reviews.each do |review| %>
            <%= render 'reviews/show', review: review %>
          <% end %>
        <% end %>
      </div>
      <%= render 'reviews/form', car: @car, review: @review %>
      <br>
      <br>
</div>
