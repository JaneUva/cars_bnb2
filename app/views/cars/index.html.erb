  <div class="container">
    <h1>Book a car of <strong>your dream</strong>!</h1>
    <p>Select from awesome collection of unique cars</p>
  </div>
</div>

<div class="container">
  <% if @cars.present? %>
  <div class="cards">
    <% @cars.each do |car| %>
    <div class="car-card">
      <%= cl_image_tag car.photo.key, height: 300, width: 400, crop: :fill %>
      <div class="car-card-info-left">
        <div>
          <h2><%= car.brand %></h2>
          <p>ðŸ‘¤ <%= car.capacity %></p>
          <p>ðŸ•¹ <%= car.drive_train %></p>
        </div>
